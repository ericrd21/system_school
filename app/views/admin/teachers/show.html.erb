<div class="content-wrapper">
  <%= render partial: 'shared/admin/page_title', locals: { title: 'Professor(a)' } %>

  <div class="content">
    <div class="container-fluid">
      <div class="row">
        
        <div class="col-lg-12">
          <div class="card card-primary card-outline">
            <div class="card-header">
              <h5 class="m-0">Detalhes</h5>
            </div>
            <div class="card-body">
              <p>
                <strong>Name:</strong>
                <%= @teacher.name %>
              </p>

              <p>
                <strong>Address:</strong>
                <%= @teacher.address %>
              </p>

              <p>
                <strong>Phone:</strong>
                <%= @teacher.phone %>
              </p>

              <p>
                <strong>Discipline:</strong>
                <%= @teacher.discipline.name %>
              </p>

              <p>
                <strong>User:</strong>
                <%= @teacher.user.email %>
              </p>
              <%= link_to 'Voltar', admin_teachers_path, class: 'btn btn-primary'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>